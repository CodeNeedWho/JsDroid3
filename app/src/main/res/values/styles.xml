<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2962FF</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="colorAccent">#64B5F6</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="qmui_skin_support_topbar_bg">@color/primary</item>
        <item name="qmui_skin_support_topbar_separator_color">@color/primary</item>
        <!-- New MaterialComponents attributes. -->

    </style>

    <style name="Material" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">#2962FF</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="colorAccent">#64B5F6</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--设置按钮颜色-->
    <style name="ToolbarTheme">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <item name="colorControlNormal">#fff</item>
    </style>
</resources>
